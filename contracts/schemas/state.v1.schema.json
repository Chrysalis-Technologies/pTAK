{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/contracts/schemas/state.v1.schema.json",
  "title": "State Envelope v1",
  "allOf": [
    {"$ref": "envelope.v1.schema.json"},
    {
      "type": "object",
      "properties": {
        "class": {"const": "state"},
        "data": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "status": {"type": "string"},
            "state": {"type": "string"},
            "reason": {"type": "string"}
          }
        }
      },
      "required": ["class", "data"]
    }
  ]
}