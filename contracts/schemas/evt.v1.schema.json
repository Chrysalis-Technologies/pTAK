{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/contracts/schemas/evt.v1.schema.json",
  "title": "Event Envelope v1",
  "allOf": [
    {"$ref": "envelope.v1.schema.json"},
    {
      "type": "object",
      "properties": {
        "class": {"const": "evt"},
        "data": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "event_type": {"type": "string"},
            "severity": {"type": "string"},
            "message": {"type": "string"}
          },
          "required": ["event_type"]
        }
      },
      "required": ["class", "data"]
    }
  ]
}